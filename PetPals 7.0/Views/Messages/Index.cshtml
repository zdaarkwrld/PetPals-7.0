@model IEnumerable<PetPals_7._0.Models.Messages>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="/css/StyleSheet.css" />
<div class="text-center">
    <h1 id="headingHome" class="display-4">Start Your Chat</h1>
    <link href="~/css/stylesheet.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <span>Name:</span><br />
            <input type="text" id="txtUser" /><br />
            <span class="message" style="color:white">Message: </span><br />
            <textarea rows="10" cols="50" id="txtMsg"></textarea><br />
            <button type="submit" class="btn btn-info" id="btnSend"> Send</button>
        </div>
        <div class="col-md-6">
            <h3>Messages:</h3>
            <ul id="list" class="alert alert-info"><</ul>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js"></script>
