@model IEnumerable<PetPals_7._0.Models.Messages>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/margin.css" />

<h1 style="margin-left: 20px; font-size:15px;">Index</h1>

<p style="margin-left: 20px;">
    <a asp-action="Create">Create New</a>
</p>
<table style="width: 70%; margin: auto;" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MessagesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MessagesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MessagesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
